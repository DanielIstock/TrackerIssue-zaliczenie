@page
@model TrackerIssue.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "Projects List";
}

<h1>Projects List</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>@project.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@project.Id">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@project.Id">Delete</a>
                </td>

            </tr>
        }

    </tbody>
</table>

<a asp-page="./Add">Add New Project</a>
