@page
@model TrackerIssue.Pages.Projects.AddModel
@{
    ViewData["Title"] = "Add Project";
}

<h1>Add Project</h1>

<form method="post">
    <div>
        <label asp-for="Project.Name"></label>
        <input asp-for="Project.Name" />
        <span asp-validation-for="Project.Name"></span>
    </div>
    <div>
        <label asp-for="Project.Description"></label>
        <textarea asp-for="Project.Description"></textarea>
        <span asp-validation-for="Project.Description"></span>
    </div>
    <button type="submit">Add Project</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
